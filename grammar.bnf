num    = whatever strtold accepts
string = /"([^\\](\\[nt"]))*"/
id     = /[a-zA-Z_][a-zA-Z0-9_]*/
nl     = \n

program = $expression_stmt*

expression_stmt =
    | $expression $nl+
    | $expression $nl* $eof

expression =
    | set $lvalue = $expression
    | $concatexp

lvalue = $var

concatexp =
    | $concatexp .. $orexp
    | $orexp

orexp =
    | $andexp or $orexp
    | $andexp

andexp =
    | $compexp and $andexp
    | $andexp

compop = < | <= | = | > | >=

compexp =
    | $addexp $compop $addexp
    | $addexp

addop = + / -

addexp =
    | $addexp $addop $mulexp
    | $mulexp

mulop = * | /

mulexp =
    | $mulexp $mulop $powexp
    | $powexp

powexp =
    | $prefix ^ $powexp
    | $prefix

prefix =
    | not $prefix
    | - $prefix
    | $base

base =
    | ( $expression )
    | $id
    | $num
    | $string
    | true
    | false
    | unit
    | @builtin ( $arglist )
    | if $expression then $body (elif $body)* (else $body)? end
    | begin $body end

body =
    | $expression
    | $nl+ ($expression $nl+)+
